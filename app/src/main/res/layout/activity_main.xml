<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:columnCount="2"
    android:padding="@dimen/moneyPadding"
    android:rowCount="4"
    android:useDefaultMargins="true"
    tools:context="com.example.alexanderschink.tipcalc.MainActivity">

    <TextView
        android:id="@+id/amaountText"
        android:layout_columnWeight="1"
        android:layout_gravity="center_vertical"
        android:layout_rowWeight="1"
        android:background="@color/moneyBackground"
        android:elevation="@dimen/moneyElevation"
        android:gravity="end"
        android:text="100$"
        android:textSize="36sp" />

    <EditText
        android:id="@+id/userInput"
        android:layout_columnWeight="10"
        android:layout_rowWeight="1"
        android:inputType="number" />

    <TextView
        android:id="@+id/percentageText"
        android:layout_columnWeight="1"
        android:layout_gravity="center_vertical"
        android:layout_rowWeight="1"
        android:gravity="end"
        android:text="0%"
        android:textSize="36sp" />

    <SeekBar
        android:id="@+id/percentageBar"
        android:layout_columnWeight="10"
        android:layout_rowWeight="1" />

    <TextView
        android:layout_columnWeight="1"
        android:layout_gravity="center_vertical"
        android:layout_rowWeight="1"
        android:gravity="end"
        android:text="Tip"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/tipText"
        android:layout_columnWeight="10"
        android:layout_rowWeight="1"
        android:background="@color/moneyBackground"
        android:elevation="@dimen/moneyElevation"
        android:gravity="center"
        android:text="10$"
        android:textSize="36sp" />

    <TextView
        android:layout_columnWeight="1"
        android:layout_gravity="center_vertical"
        android:layout_rowWeight="1"
        android:gravity="end"
        android:text="Total"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/totalText"
        android:layout_columnWeight="10"
        android:layout_rowWeight="1"
        android:background="@color/moneyBackground"
        android:elevation="@dimen/moneyElevation"
        android:gravity="center"
        android:text="110$"
        android:textSize="36sp" />

</GridLayout>
